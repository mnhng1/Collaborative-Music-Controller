{
    "manifest_version": 3,
    "name": "YouTube Playback Controller",
    "version": "1.0",
    "description": "Control YouTube or YouTube Music playback from a popup or background script.",
    "permissions": [
      "tabs",
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icons/icon.png"
    },
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/*", "https://music.youtube.com/*"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "48": "logo.png"
    }
  }
  